<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/iv_blackStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/blck_stars_64px"
            android:layout_alignTop="@+id/iv_orangeStar"
            android:layout_toStartOf="@+id/iv_crystalBall"
            android:layout_marginTop="12dp" />

        <ImageView
            android:id="@+id/iv_orangeStar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_below="@+id/btn_closeDialog"
            android:layout_marginTop="47dp"
            android:layout_toEndOf="@+id/iv_crystalBall"
            app:srcCompat="@drawable/orange_star_128px" />

        <ImageView
            android:id="@+id/iv_yellowStar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignBottom="@+id/iv_orangeStar"
            android:layout_toStartOf="@+id/iv_orangeStar"
            app:srcCompat="@drawable/yellow_star_128" />

        <Button
            android:id="@+id/btn_closeDialog"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignEnd="@+id/tv_elfSays"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="22dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/close_button_36x36" />

        <ImageView
            android:id="@+id/iv_smallStars"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iv_crystalBall"
            app:srcCompat="@drawable/blck_stars_64px" />

        <ImageView
            android:id="@+id/iv_crystalBall"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_below="@+id/iv_orangeStar"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/crystal_ball_128x128px" />


        <TextView
            android:id="@+id/tv_elfSays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv_crystalBall"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="39dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="italic" />


    </RelativeLayout>



</RelativeLayout>